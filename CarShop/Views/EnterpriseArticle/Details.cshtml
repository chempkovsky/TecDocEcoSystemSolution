@model TecDocEcoSystemDbClassLibrary.EnterpriseArticleTDES
@using CarShop.Properties;
@{
    ViewBag.Title = Resources.DETAILS_ACTION;
    Guid? SearchEntGuid = ViewBag.SearchEntGuid;
    String EntDescription = ViewBag.EntDescription;

    String SearchEntBrandNic = ViewBag.SearchEntBrandNic;
    String EntBrandDescription = ViewBag.EntBrandDescription;
}

<div class="panel panel-info" hidden>
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        @Resources.EnterpriseArticleHelp1<br>@Resources.EnterpriseArticleHelp2
        <br>
        Перейдите по ссылке для получения более детальной информации
        @Html.ActionLink("Каталог артикулов", "Articles", "ByTasks", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
    </div>
</div>


<h2>@Resources.DETAILS_ACTION <small>@Resources.EnterpriseArticle_INDEX</small></h2>

@if (string.IsNullOrEmpty( SearchEntBrandNic ))
{
    <ol class="breadcrumb">
        <li>@Html.ActionLink(Resources.EnterpriseTDES_INDEX, "Index", "Enterprises")</li>
        @if (SearchEntGuid.HasValue)
        {
            <li>@Html.ActionLink(EntDescription, "Details", "Enterprises", new { id = SearchEntGuid }, new { })</li>
            <li>@Html.ActionLink(Resources.EnterpriseBrand_INDEX, "Index", "EnterpriseBrand", new { searchEntGuid = SearchEntGuid }, new { })</li>
            if (SearchEntBrandNic != null)
            {
                <li>@Html.ActionLink(EntBrandDescription, "Details", "EnterpriseBrand", new { idEntBrandNic = SearchEntBrandNic, searchEntGuid = SearchEntGuid }, new { })</li>
                <li>@Html.ActionLink(Resources.EnterpriseArticle_INDEX, "Index", "EnterpriseArticle", new { searchEntBrandNic = SearchEntBrandNic, searchEntGuid = SearchEntGuid }, new { })</li>
            }
        }
    </ol>
    
    @Html.ValidationSummary(true)
} else {


<div>
    @*<h4>EnterpriseArticleTDES</h4>*@
    <ol class="breadcrumb">
        <li>@Html.ActionLink(Resources.EnterpriseTDES_INDEX, "Index", "Enterprises")</li>
        @if (SearchEntGuid.HasValue)
        {
            <li>@Html.ActionLink(EntDescription, "Details", "Enterprises", new { id = SearchEntGuid }, new { })</li>
            <li>@Html.ActionLink(Resources.EnterpriseBrand_INDEX, "Index", "EnterpriseBrand", new { searchEntGuid = SearchEntGuid }, new { })</li>
            if (SearchEntBrandNic != null)
            {
                <li>@Html.ActionLink(EntBrandDescription, "Details", "EnterpriseBrand", new { idEntBrandNic = SearchEntBrandNic, searchEntGuid = SearchEntGuid }, new { })</li>
                <li>@Html.ActionLink(Resources.EnterpriseArticle_INDEX, "Index", "EnterpriseArticle", new { searchEntBrandNic = SearchEntBrandNic, searchEntGuid = SearchEntGuid }, new { })</li>
            }
        }
    </ol>

	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EntArticle)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EntArticle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EnterpriseArticleDescriptionTDES.EntArticleDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnterpriseArticleDescriptionTDES.EntArticleDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EnterpriseBrand.EntBrandDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnterpriseBrand.EntBrandDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExternArticle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExternArticle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExternBrandNic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExternBrandNic)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ExternArticleEAN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ExternArticleEAN)
        </dd>

    </dl>
</div>
<p>
    @if ((ViewBag.IsEcoSystemAdmin) || (ViewBag.IsEnterpriseAdmin))
    {
        @Html.ActionLink(Resources.EDIT_ACTION, "Edit", "EnterpriseArticle", new { searchEntArticle = Model.EntArticle, searchEntBrandNic = Model.EntBrandNic, searchEntGuid = SearchEntGuid }, new { @class = "btn btn-primary" })
    }
    @Html.ActionLink(Resources.BACKTOLIST_ACTION, "Index", "EnterpriseArticle", new { searchEntBrandNic = SearchEntBrandNic, searchEntGuid = SearchEntGuid }, new { })
</p>

}