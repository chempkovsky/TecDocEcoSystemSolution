@model TecDocEcoSystemDbClassLibrary.ContactType
@using CarShop.Properties;
@{
    ViewBag.Title = Resources.DETAILS_ACTION;
}

<h2>@Resources.DETAILS_ACTION <small>@Resources.ContactType_INDEX</small></h2>

<div>
    @*<h4>ContactType</h4>*@
    <ol class="breadcrumb">
        <li>@Html.ActionLink(Resources.ContactType_INDEX, "Index")</li>
    </ol>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ContactTypeId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactTypeId)
        </dd>

    </dl>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ContactTypeDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactTypeDescription)
        </dd>

    </dl>
</div>

<p>
    @if ((ViewBag.IsEcoSystemAdmin) || (ViewBag.IsEnterpriseAdmin))
    {
        @Html.ActionLink(Resources.EDIT_ACTION, "Edit", new { id = Model.ContactTypeId }, new { @class = "btn btn-primary" })
    }
    @Html.ActionLink(Resources.BACKTOLIST_ACTION, "Index")
</p>
