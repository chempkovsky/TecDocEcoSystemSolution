                @Html.EditorFor(model => model.CountryIso)
                @Html.ValidationMessageFor(model => model.CountryIso)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CountryCode2, new { @class = "control-label col-md-2" })
