@model TecDocEcoSystemDbClassLibrary.Country
@using CarShop.Properties;
@{
    ViewBag.Title = Resources.CREATENEW_ACTION;
}

<h2>@Resources.CREATENEW_ACTION <small>@Resources.Country_INDEX</small></h2>


