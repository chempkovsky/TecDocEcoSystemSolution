@using CarShop.Properties;
@model TecDocEcoSystemDbClassLibrary.AddressType

@{
    ViewBag.Title = Resources.DETAILS_ACTION;
}

<h2>@Resources.DETAILS_ACTION <small>@Resources.AddressType_INDEX</small></h2>



<div>
    @*<h4>@Resources.AddressType_INDEX</h4>*@
    <ol class="breadcrumb">
        <li>@Html.ActionLink(Resources.AddressType_INDEX, "Index")</li>
    </ol>

	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AddressTypeId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressTypeId)
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AddressTypeDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressTypeDescription)
        </dd>
    </dl>
</div>
<p>
    @if ((ViewBag.IsEcoSystemAdmin) || (ViewBag.IsEnterpriseAdmin))
    {
        @Html.ActionLink(Resources.EDIT_ACTION, "Edit", new { id = Model.AddressTypeId }, new { @class = "btn btn-primary" })
    }
    @Html.ActionLink(Resources.BACKTOLIST_ACTION, "Index")
</p>
