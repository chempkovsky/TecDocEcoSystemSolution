@using CarShop.Properties;
@model TecDocEcoSystemDbClassLibrary.GuestOrderArticleTDES

@{
    ViewBag.Title = "Delete";
    Guid? searchGuestOrderGuid = ViewBag.GuestOrderGuid;
}


<h2>@Resources.DELETE_ACTION <small>@Resources.GuestOrderArticleTDES_INDEX</small></h2>

<h3>@Resources.SURE_TO_DELETE</h3>
<div>
    @*<h4>GuestOrderArticleTDES</h4>*@
    <ul class="breadcrumb">
        <li>@Html.ActionLink(Resources.GuestProfileTDES_INDEX, "Index", "GuestProfile")</li>
        <li>@Html.ActionLink(Resources.GuestOrderTDES_INDEX, "Index", "GuestOrder")</li>
        @if (searchGuestOrderGuid.HasValue)
        {
            <li>@Html.ActionLink(Resources.GuestOrderTDES_DETAIL, "Details", "GuestOrder", routeValues: new { id = searchGuestOrderGuid }, htmlAttributes: new { })</li>
            <li>@Html.ActionLink(Resources.GuestOrderArticleTDES_INDEX, "Index", "GuestOrderArticle", new { searchGuestOrderGuid = searchGuestOrderGuid }, new { })</li>
        }
    </ul>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ArtAmount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArtAmount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ArtPrice)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArtPrice)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.ART_ARTICLE_NR)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ART_ARTICLE_NR)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SUP_TEXT)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SUP_TEXT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EntArticleDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EntArticleDescription)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.ExternArticleEAN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ExternArticleEAN)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.LastUpdated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastReplicated)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastReplicated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsReplicated)
        </dt>

        <dd>
            @if (Model != null)
            {
                if (Model.IsReplicated > 0)
                {
                    @Resources.Boolean_NO
                }
                else
                {
                    @Resources.Boolean_YES
                }
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        if(Model != null) {
            @Html.Hidden("searchGuestOrderGuid",   Model.GuestOrderGuid)
            @Html.Hidden("searchEntBranchArticle", Model.EntBranchArticle)
            @Html.Hidden("searchEntBranchSup",     Model.EntBranchSup)
        }

        <div class="form-actions no-color">
            <input type="submit" value="@Resources.DELETE_ACTION" class="btn btn-danger" /> 
            @if (searchGuestOrderGuid.HasValue)
            {
                @Html.ActionLink(Resources.BACKTOLIST_ACTION, "Index", "GuestOrderArticle", new { searchGuestOrderGuid = searchGuestOrderGuid }, new { })
            }
        </div>
    }
</div>
