@model TecDocEcoSystemDbClassLibrary.SettlementType
@using CarShop.Properties;
@{
    ViewBag.Title = Resources.CREATENEW_ACTION;
}

<h2>@Resources.CREATENEW_ACTION</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>SettlementType</h4>*@
        <ol class="breadcrumb">
            <li>@Html.ActionLink(Resources.SettlementType_INDEX, "Index")</li>
        </ol>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SettlementTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SettlementTypeId)
                @Html.ValidationMessageFor(model => model.SettlementTypeId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SettlementTypeDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SettlementTypeDescription)
                @Html.ValidationMessageFor(model => model.SettlementTypeDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SettlementTypeShortDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SettlementTypeShortDescription)
                @Html.ValidationMessageFor(model => model.SettlementTypeShortDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.CREATE_ACTION" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Resources.BACKTOLIST_ACTION, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
