@model TecDocEcoSystemDbClassLibrary.StreetType
@using CarShop.Properties;
@{
    ViewBag.Title = Resources.EDIT_ACTION;
}

<h2>@Resources.EDIT_ACTION</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>StreetType</h4>*@
        <ol class="breadcrumb">
            <li>@Html.ActionLink(Resources.StreetType_INDEX, "Index")</li>
        </ol>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.StreetTypeId)

        <div class="form-group">
            @Html.LabelFor(model => model.StreetTypeId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.StreetTypeId)*@
                @Html.TextBoxFor(model => model.StreetTypeId, new { @readonly = "true" })
                @Html.ValidationMessageFor(model => model.StreetTypeId)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.StreetTypeDescription, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StreetTypeDescription)
                @Html.ValidationMessageFor(model => model.StreetTypeDescription)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.SAVE_ACTION" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(Resources.BACKTOLIST_ACTION, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
