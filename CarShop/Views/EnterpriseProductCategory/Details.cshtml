        </dt>

        <dd>
            @Html.DisplayFor(model => model.PCId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PCDescription)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PCDescription)
